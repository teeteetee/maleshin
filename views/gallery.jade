      script.
        function populate(){
        var source = !{albums};
        var alngth = source.length;
        var lnum = alngth%4;
        var times = (alngth - lnum)/4;
        if(alngth<4){
        switch(alngth){
        case(1):
        $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[0].pimgpath+"'></div></div>");
        return
        break;
        case(2):
        $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[0].pimgpath+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[1].pimgpath+"'></div></div>");
        return
        break;
        case(3):
        $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[0].pimgpath+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[1].pimgpath+"'></div>/div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[2].pimgpath+"'></div></div>");
        return
        break;
        case(4):
        $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[0].pimgpath+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[1].pimgpath+"'></div>/div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[2].pimgpath+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+source[3].pimgpath+"'></div></div>");
        return
        break;
        }
        }
        for (yy=0;yy<times;yy++){   
        var multiplier = 4*yy;
        var first = 0+multiplier;
        first = 'source['+first+'].pimgpath';
        var second =1+multiplier;
        second = 'source['+second+'].pimgpath';
        var third =2+multiplier;
        third = 'source['+third+'].pimgpath';
        var fourth =3+multiplier;
        fourth = 'source['+fourth+'].pimgpath';
        $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+first+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+second+"'></div></div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+third+"'></div><div class='col-xs-3 pic'><img src='"+fourth+"'></div></div>");    
        }
        switch(lnum){
        case(1):
         var last = times*4+1 ;
         last = 'source['+last+'].pimgpath';
         $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last+"'></div></div>");
        break;
        case(2):
         var last = times*4+1 ;
         last = 'source['+last+'].pimgpath';
         var last2 = times*4+2;
         last2 = 'source{'+last2+'].pimgpath';
         $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last2+"'></div></div>");
        break;
        case(3):
         var last = times*4+1 ;
         last = 'source['+last+'].pimgpath';
         var last2 = times*4+2;
         last2 = 'source['+last2+'].pimgpath';
         var last3 = times*4+3;
         last3 = 'source['+last3+'].pimgpath';
         $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last2+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last3+"'></div></div>");
        break;
        case(4):
        var last = times*4+1 ;
         last = 'source['+last+'].pimgpath';
         var last2 = times*4+2;
         last2 = 'source['+last2+'].pimgpath';
         var last3 = times*4+3;
         last3 = 'source['+last3+'].pimgpath';
         var last4 = times*4+4;
         last4 = 'source['+last4+'].pimgpath';
         $('#albums').append("<div class='row' style='border-bottom:1px solid #eee;'><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last2+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last3+"'></div><div class='col-xs-3 pic' style='border-right:1px solid #eee;'><img src='"+last4+"'></div></div>");
        break;
        }
        } 
        populate();     
